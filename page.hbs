{{!< default}}

{{#post}}
<article class="gh-article page-content {{post_class}}">
    {{#match @page.show_title_and_feature_image}}
        <header class="gh-header gh-canvas md:w-[720px] mx-4 md:mx-auto">
            <h1 class="gh-title font-bold text-3xl md:text-5xl text-left">{{title}}</h1>
            {{#if feature_image}}
                <figure class="gh-feature-image">
                    <img src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                    {{#if feature_image_caption}}
                        <figcaption>{{feature_image_caption}}</figcaption>
                    {{/if}}
                </figure>
            {{/if}}
        </header>
    {{/match}}

    <div class="gh-content gh-canvas md:w-[720px] mx-4 md:mx-auto">
        {{content}}
    </div>

</article>
{{/post}}
